<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="109dp"
        android:layout_marginRight="109dp"
        android:layout_marginBottom="8dp"
        android:text="@string/contact_us"
        android:textColor="#030847"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="0dp"
        android:layout_height="@dimen/contact_us_text_area_height_size"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="621dp"
        android:background="@drawable/rounded_textview"
        android:drawableStart="@mipmap/icons8_outgoing_call_48"
        android:drawableLeft="@mipmap/icons8_outgoing_call_48"
        android:text="@string/_94114722236"

        android:textSize="@dimen/contact_us_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="@dimen/contact_us_text_area_height_size"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rounded_textview"
        android:drawableStart="@mipmap/icons8_send_email_64"


        android:drawableLeft="@mipmap/icons8_send_email_64"
        android:text="@string/info_srilankancricket_lk"
        android:textSize="@dimen/contact_us_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fax" />

    <TextView
        android:id="@+id/web"
        android:layout_width="0dp"
        android:layout_height="@dimen/contact_us_text_area_height_size"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"

        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rounded_textview"
        android:drawableStart="@mipmap/icons8_web_64"
        android:drawableLeft="@mipmap/icons8_web_64"
        android:text="@string/www_srilankancricket_lk"
        android:textSize="@dimen/contact_us_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/fax"
        android:layout_width="0dp"
        android:layout_height="@dimen/contact_us_text_area_height_size"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/rounded_textview"
        android:drawableStart="@mipmap/icons8_office_phone_48"
        android:drawableLeft="@mipmap/icons8_office_phone_48"
        android:text="@string/_94112895697"
        android:textSize="@dimen/contact_us_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactNumber" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/map_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/web" />


</androidx.constraintlayout.widget.ConstraintLayout>

